<a
        class="go-back-button"
        id="go-back-button"
        aria-label="go back"
>
    <img
            src="/public/icons/arrow-left.svg"
            alt="go back"
            class="sidebar-button__icon"
    >
</a>

<div class="sidebar__button-container">
    {{#each buttons}}
        <a
            {{#if this.active}}
                class="sidebar-button"
            {{else}}
                class="sidebar-button_disabled"
            {{/if}}
            id="{{this.id}}"
            aria-label="{{this.alt}}"
        >
            <img
                src="{{this.source}}"
                alt="{{this.alt}}"
                class="sidebar-button__icon"
            />
        </a>
    {{/each}}
</div>
